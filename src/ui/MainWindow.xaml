<Window x:Class="MidiVolumeMixer.ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MidiVolumeMixer.ui"
        Title="MIDI Volume Mixer" Height="600" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <!-- Convert float volume (0.0-1.0) to percentage (0-100) for progress bars -->
            <local:VolumeToPercentConverter x:Key="VolumeToPercentConverter"/>
            
            <!-- Convert float volume (0.0-1.0) to percentage string for display -->
            <local:VolumeToPercentStringConverter x:Key="VolumeToPercentStringConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="MIDI Volume Mixer" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <GroupBox Header="MIDI Device" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <ComboBox Name="MidiDevicesComboBox" Margin="0,5,0,5" SelectionChanged="MidiDevicesComboBox_SelectionChanged"/>
                    <Button Name="RefreshDevicesButton" Content="Refresh Devices" Click="RefreshDevicesButton_Click" HorizontalAlignment="Left" Padding="10,3"/>
                    <TextBlock Name="MidiStatusTextBlock" Margin="0,5,0,0" Foreground="Gray"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Applications">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListView Name="ApplicationsListView" Grid.Row="0" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Application" Width="200" DisplayMemberBinding="{Binding ProcessName}"/>
                                <GridViewColumn Header="Volume" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ProgressBar Value="{Binding Volume, Converter={StaticResource VolumeToPercentConverter}}" 
                                                        Width="80" Height="15"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="%" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Volume, Converter={StaticResource VolumeToPercentStringConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Controls" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="0%" Width="35" Click="SetVolume_Click" Tag="0"/>
                                                <Button Content="50%" Width="35" Margin="5,0" Click="SetVolume_Click" Tag="50"/>
                                                <Button Content="100%" Width="35" Click="SetVolume_Click" Tag="100"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <Button Content="Refresh Applications" Click="RefreshApplications_Click" Padding="10,3"/>
                        <Button Content="Set All to 100%" Click="SetAllVolumes_Click" Margin="10,0,0,0" Tag="100" Padding="10,3"/>
                        <Button Content="Set All to 50%" Click="SetAllVolumes_Click" Margin="10,0,0,0" Tag="50" Padding="10,3"/>
                        <Button Content="Set All to 0%" Click="SetAllVolumes_Click" Margin="10,0,0,0" Tag="0" Padding="10,3"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="MIDI Mappings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListView Name="MappingsListView" Grid.Row="0" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="MIDI Note" Width="80" DisplayMemberBinding="{Binding MidiNote}"/>
                                <GridViewColumn Header="Applications" Width="300" DisplayMemberBinding="{Binding MappingDescription}"/>
                                <GridViewColumn Header="Actions" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Edit" Width="40" Click="EditMapping_Click" Tag="{Binding MappingId}"/>
                                                <Button Content="Delete" Width="40" Margin="5,0,0,0" Click="DeleteMapping_Click" Tag="{Binding MappingId}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <Button Content="Add New Mapping" Click="AddMapping_Click" Padding="10,3"/>
                        <Button Content="Learn MIDI" Click="LearnMidi_Click" Margin="10,0,0,0" Padding="10,3"/>
                        <Button Content="Save Mappings" Click="SaveMappings_Click" Margin="10,0,0,0" Padding="10,3"/>
                        <Button Content="Load Mappings" Click="LoadMappings_Click" Margin="10,0,0,0" Padding="10,3"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Settings">
                <StackPanel Margin="10">
                    <CheckBox Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="0,5"/>
                    <CheckBox Name="MinimizeToTrayCheckBox" Content="Minimize to system tray" Margin="0,5"/>
                    <CheckBox Name="StartMinimizedCheckBox" Content="Start minimized" Margin="0,5"/>
                    <Button Content="Save Settings" Click="SaveSettings_Click" HorizontalAlignment="Left" Margin="0,10" Padding="10,3"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="About">
                <StackPanel Margin="10">
                    <TextBlock Text="MIDI Volume Mixer" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Version 1.0" Margin="0,5"/>
                    <TextBlock Text="Created by Your Name" Margin="0,5"/>
                    <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
                        This application allows you to control the volume of different applications using a MIDI controller.
                        You can map MIDI notes to specific volume settings for different applications.
                    </TextBlock>
                    <TextBlock Margin="0,10,0,0">Libraries used:</TextBlock>
                    <TextBlock Margin="10,5,0,0">• NAudio</TextBlock>
                    <TextBlock Margin="10,0,0,0">• Melanchall.DryWetMidi</TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>